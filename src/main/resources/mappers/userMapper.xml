<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.banseok.user">

	<insert id="create">
		insert into tbl_user(userid, userpw , username,age,birth)
		values(#{userid} ,#{userpw} , #{username} , #{age} , #{birth})
	</insert>
	
	<select id="listAll" resultType="com.user.domain.UserVO" >
		select * 
		from 
		tbl_user
	</select>
	
	<select id="read" resultType="com.user.domain.UserVO">
		select * 
		from 
		tbl_user 
		where
		userid = #{userid}
	</select>
	
	<update id="update">
		update tbl_user set userpw=#{userpw} , email=#{email}, phone=#{phone}
		where userid=#{userid} 				
	</update>
	
	<delete id="delete">
		delete from tbl_user
		where userid=#{userid}
	</delete>

</mapper>  